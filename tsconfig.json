{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "resolveJsonModule": true,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
    },
    "include": [
      "src"
    ],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "coverage"
    ]
}
